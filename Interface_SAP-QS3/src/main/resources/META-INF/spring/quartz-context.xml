	<bean id="cronOrdenCancellationInput" class="org.springframework.scheduling.quartz.CronTriggerBean">
		<property name="jobDetail" ref="jobDetailOrdenCancellationInput" />
		<property name="cronExpression" value="0 6 * * * ?" />
	</bean>

